/* components/search_result_list/list.wxss */

.search_list_container {
    height: 112rpx;
    display: flex;
    align-items: center;
    box-sizing: border-box;
    padding: 0  0 0 23rpx;
    position: relative;
}

.location_box {
    width: 40rpx;
    height: 40rpx;
}
.location {
    width: 40rpx;
    height: 40rpx;
}
.diy_line_address {
    width: 660rpx;
    height: 0;
    /* border-top: 1px solid #E1E1E1; */
    position: absolute;
    bottom: 0;
    right: 0;
}
.address_info {
    width: 660rpx;
    height: 112rpx;
    flex: 1;
    margin-left: 25rpx;
    display: flex;
    flex-direction: column;
    position: relative;
    /* justify-content: center; */
    /* border-bottom: 1px solid #e1e1e1; */
}
@media only screen and (-moz-min-device-pixel-ratio: 2),
only screen and (-o-min-device-pixel-ratio: 2),
only screen and (-webkit-min-device-pixel-ratio: 2),
only screen and (min-device-pixel-ratio:2) {
    /* .address_info:after{
        content: '';
        position: absolute;
        left: 0;
        bottom:0;
        background: #E1E1E1;
        width: 100%;
        height: 1px;
        -webkit-transform: scaleY(0.5);
        transform: scaleY(0.5);
        -webkit-transform-origin: 0 0;
        transform-origin: 0 0;
    } */
    .diy_line_address:after {
        content: '';
        position: absolute;
        right: 0;
        bottom:0;
        background: #E1E1E1;
        width: 100%;
        height: 1px;
        -webkit-transform: scaleY(0.5);
        transform: scaleY(0.5);
        -webkit-transform-origin: 0 0;
        transform-origin: 0 0;
    }
}
@media only screen and (-moz-min-device-pixel-ratio: 3),
only screen and (-o-min-device-pixel-ratio: 3),
only screen and (-webkit-min-device-pixel-ratio: 3),
only screen and (min-device-pixel-ratio:3) {
    /* .address_info:after{
        content: '';
        position: absolute;
        left: 0;
        bottom:0;
        background: #E1E1E1;
        width: 100%;
        height: 1px;
        -webkit-transform: scaleY(0.33333);
        transform: scaleY(0.33333);
        -webkit-transform-origin: 0 0;
        transform-origin: 0 0;
    } */
    .diy_line_address:after {
        content: '';
        position: absolute;
        right: 0;
        bottom:0;
        background: #E1E1E1;
        width: 100%;
        height: 1px;
        -webkit-transform: scaleY(0.33333);
        transform: scaleY(0.33333);
        -webkit-transform-origin: 0 0;
        transform-origin: 0 0;
    }
}
.address_title {
    font-size: 30rpx;
    color: #323232;
    margin-top: 13rpx;
}

.address_detail_tips {
    width: calc(750rpx - 113rpx);
    font-size: 24rpx;
    color: #888888;
    margin-top: 4rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}