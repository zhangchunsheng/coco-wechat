.topContainer {
    /* border-top: 1px solid #E1E1E1; */
    /* border-bottom: 1px solid #E1E1E1; */
    position: relative;
    width: 750rpx;
    height: 288rpx;
}

.diy_line {
    width: 718rpx;
    height: 0;
    /* border-top: 1px solid #E1E1E1; */
    position: absolute;
    top: 96rpx;
    right: 0;
}

.diy_line_3 {
    float: left;
    width: 750rpx;
    height: 0;
    /* border-top: 1px solid #E1E1E1; */
    position: absolute;
    /* bottom: 0; */
    /* right: 0; */
}

@media only screen and (-moz-min-device-pixel-ratio: 3),
only screen and (-o-min-device-pixel-ratio: 3),
only screen and (-webkit-min-device-pixel-ratio: 3),
only screen and (min-device-pixel-ratio:3) {
    .diy_line:after {
        content: '';
        position: absolute;
        left: 0;
        background: #E1E1E1;
        width: 100%;
        height: 1px;
        -webkit-transform: scaleY(0.33333);
        transform: scaleY(0.33333);
        -webkit-transform-origin: 0 0;
        transform-origin: 0 0;
    }
    .diy_line_3:after {
        content: '';
        position: absolute;
        left: 0;
        bottom: -1rpx;
        background: #E1E1E1;
        width: 100%;
        height: 1px;
        -webkit-transform: scaleY(0.33333);
        transform: scaleY(0.33333);
        -webkit-transform-origin: 0 0;
        transform-origin: 0 0;
    }
    .topContainer:after {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        background: #E1E1E1;
        width: 100%;
        height: 1px;
        -webkit-transform: scaleY(0.33333);
        transform: scaleY(0.33333);
        -webkit-transform-origin: 0 0;
        transform-origin: 0 0;
    }
}

@media only screen and (-moz-min-device-pixel-ratio: 2),
only screen and (-o-min-device-pixel-ratio: 2),
only screen and (-webkit-min-device-pixel-ratio: 2),
only screen and (min-device-pixel-ratio:2) {
    .diy_line:after {
        content: '';
        position: absolute;
        left: 0;
        background: #E1E1E1;
        width: 100%;
        height: 1px;
        -webkit-transform: scaleY(0.5);
        transform: scaleY(0.5);
        -webkit-transform-origin: 0 0;
        transform-origin: 0 0;
    }
    .diy_line_3:after {
        content: '';
        position: absolute;
        left: 0;
        bottom: -1rpx;
        background: #E1E1E1;
        width: 100%;
        height: 1px;
        -webkit-transform: scaleY(0.5);
        transform: scaleY(0.5);
        -webkit-transform-origin: 0 0;
        transform-origin: 0 0;
    }
    .topContainer:after {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        background: #E1E1E1;
        width: 100%;
        height: 1px;
        -webkit-transform: scaleY(0.5);
        transform: scaleY(0.5);
        -webkit-transform-origin: 0 0;
        transform-origin: 0 0;
    }
}

